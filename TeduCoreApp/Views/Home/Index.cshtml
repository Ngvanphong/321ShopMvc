@using TeduCoreApp.Data.ViewModels.Slide

@model TeduCoreApp.Models.HomeViewModel

<!doctype html>
<html lang="en">

<head>

    <!--====== Required meta tags ======-->
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="@ViewBag.HomeMetaDescription">
    <meta name="keywords" content="@ViewBag.HomeMetaKeyword" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!--====== Title ======-->
    <title>@ViewBag.HomeTitle</title>


    <!--====== Favicon Icon ======-->
    <link rel="shortcut icon" href="assets/images/favicon.png" type="image/png">

    <!--====== Bootstrap css ======-->
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">

    <!--====== Line Icons css ======-->
    <link rel="stylesheet" href="assets/css/LineIcons.css">

    <!--====== Magnific Popup css ======-->
    <link rel="stylesheet" href="assets/css/magnific-popup.css">

    <!--====== Slick css ======-->
    <link rel="stylesheet" href="assets/css/slick.css">

    <!--====== Animate css ======-->
    <link rel="stylesheet" href="assets/css/animate.css">

    <!--====== Default css ======-->
    <link rel="stylesheet" href="assets/css/default.css">

    <!--====== Style css ======-->
    <link rel="stylesheet" href="assets/css/style.css">

    <!--====== Clock css ======-->
    <link rel="stylesheet" href="~/assets/css/clock.css">

    <!--====== Clock css ======-->
    <link rel="stylesheet" href="~/assets/css/table-responesite.css">
</head>

<body>

    <!--====== PRELOADER PART START ======-->

    <div class="preloader">
        <div class="loader">
            <div class="ytp-spinner">
                <div class="ytp-spinner-container">
                    <div class="ytp-spinner-rotator">
                        <div class="ytp-spinner-left">
                            <div class="ytp-spinner-circle"></div>
                        </div>
                        <div class="ytp-spinner-right">
                            <div class="ytp-spinner-circle"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--====== PRELOADER PART ENDS ======-->
    <!--====== NAVBAR PART START ======-->

    <section class="header-area">
        <div class="navbar-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-expand-lg">
                            <a class="navbar-brand" href="#">
                                <img src="assets/images/logo.png" alt="Logo">
                            </a>

                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarEight" aria-controls="navbarEight" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse sub-menu-bar" id="navbarEight">
                                <ul class="navbar-nav ml-auto">
                                    <li class="nav-item active">
                                        <a class="page-scroll" href="/page.html?=bao-hanh" target="_blank">BẢO HÀNH</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="page-scroll" href="#about">LIÊN HỆ</a>
                                    </li>
                                    @{ foreach (ProductCategoryViewModel productCate in Model.ListCategoryHomeFlag)
                                        {
                            <li class="nav-item">
                                <a class="page-scroll" href="#@productCate.SeoAlias">@productCate.Name</a>
                            </li> } }
                                </ul>
                            </div>

                            <div class="navbar-btn d-none mt-15 d-lg-inline-block">
                                <a class="menu-bar" href="#side-menu-right"><i class="lni-menu"></i></a>
                            </div>
                        </nav> <!-- navbar -->
                    </div>
                </div> <!-- row -->
            </div> <!-- container -->
        </div> <!-- navbar area -->

        <div id="home" class="slider-area">
            <div class="bd-example">

                <div id="carouselOne" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @{int firstSlide = 1; }
                        @{ foreach (SlideViewModel slide in Model.ListSlide)
                            {
                                if (firstSlide == 1)
                                {
                <div class="carousel-item bg_cover active" } style="background-image: url(@Model.DomainApi@slide.Image)">
                    <div class="carousel-caption">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-xl-6 col-lg-7 col-sm-10">
                                    <h2 class="carousel-title">@slide.Content</h2>
                                </div>
                            </div> <!-- row -->
                        </div> <!-- container -->
                    </div> <!-- carousel caption -->
                </div> <!-- carousel-item --> }
            else
            {
                    <div class="carousel-item bg_cover" } style="background-image: url(@Model.DomainApi@slide.Image)">
                        <div class="carousel-caption">
                            <div class="container">
                                <div class="row justify-content-center">
                                    <div class="col-xl-6 col-lg-7 col-sm-10">
                                        <h2 class="carousel-title">@slide.Content</h2>
                                    </div>
                                </div> <!-- row -->
                            </div> <!-- container -->
                        </div> <!-- carousel caption -->
                    </div> <!-- carousel-item --> }
firstSlide += 1;

} }
                    </div> <!-- carousel-inner -->
                    <a class="carousel-control-prev" href="#carouselOne" role="button" data-slide="prev">
                        <i class="lni-arrow-left-circle"></i>
                    </a>
                    <a class="carousel-control-next" href="#carouselOne" role="button" data-slide="next">
                        <i class="lni-arrow-right-circle"></i>
                    </a>
                </div> <!-- carousel -->
            </div> <!-- bd-example -->
        </div>
    </section>

    <!--====== NAVBAR PART ENDS ======-->
    <!--====== SAIDEBAR PART START ======-->

    <div class="sidebar-right">
        <div class="sidebar-close">
            <a class="close" href="#close"><i class="lni-close"></i></a>
        </div>
        <div class="sidebar-content">
            <div class="sidebar-logo text-center">
                <a href="#"><img src="assets/images/logo-alt.png" alt="Logo"></a>
            </div> <!-- logo -->
            <div class="sidebar-menu">
                <ul>
                    <li><a href="#">LIÊN HỆ</a></li>
                    @{ foreach (ProductCategoryViewModel cate2 in Model.ListCategoryNotHomeFlag)
                        {
            <li><a href="#@cate2.SeoAlias">@cate2.Name</a></li> } }
                </ul>
            </div> <!-- menu -->
        </div> <!-- content -->
    </div>

    <div class="overlay-right"></div>

    <!--====== SAIDEBAR PART ENDS ======-->
    <!--====== ABOUT PART START ======-->

    <section id="about" class="about-area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8">
                    <div class="about-image text-center wow fadeInUp" data-wow-duration="1.5s" data-wow-offset="100">

                        <!--====== CLOCK ======-->
                        <div id="clock" class="light">
                            <div>
                                <div class="weekdays"></div>
                                <div class="ampm"></div>
                                <div class="alarm"></div>
                                <div class="digits"></div>
                            </div>
                        </div>
                    </div>
                    <div class="section-title text-center mt-30 pb-40">
                        <h4 class="title wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="0.6s">LIÊN HỆ</h4>

                        <p class="text wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="1s">Địa chỉ</p>
                        <p class="text wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="1s" style="color:aqua">@Model.Contact.Address</p>
                        <p class="text wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="1s">Số điện thoại</p>
                        <p class="text wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="1s" style="color:aqua">@Model.Contact.Phone</p>
                        <p class="text wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="1s">Tài khoản ngân hàng</p>
                        @{ if (Model.Contact.Bank1 != null && Model.Contact.Bank1 != "")
                            {
                <p class="text wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="1s" style="color:aqua">@Model.Contact.Bank1</p> } }
                        @{ if (Model.Contact.Bank2 != null && Model.Contact.Bank2 != "")
                            {
                <p class="text wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="1s" style="color:aqua">@Model.Contact.Bank2</p> } }
                        @{ if (Model.Contact.Bank3 != null && Model.Contact.Bank3 != "")
                            {
                <p class="text wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="1s" style="color:aqua">@Model.Contact.Bank3</p> } }
                    </div> <!-- section title -->
                </div>
            </div> <!-- row -->
        </div> <!-- container -->
    </section>

    <!--====== ABOUT PART ENDS ======-->
    <!--====== portfolio PART START ======-->

    <section class="portfolio-area">

        @{ foreach (ProductHomeViewModel productHome in Model.ListProductHome)
            {
<div id="@productHome.CategoryParent.SeoAlias" class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="section-title text-center pb-20">
                <h3 class="title" style="color:aqua">@productHome.CategoryParent.Name</h3>
            </div> <!-- row -->
        </div>
        <div class="single-portfolio mt-30 wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="0.2s">
            <div class="portfolio-image">
                <img src="@Model.DomainApi@productHome.CategoryParent.Image" alt="">
            </div>
        </div> <!-- single portfolio -->
    </div> <!-- row -->
    @{ foreach (var productSub in productHome.ListProductCategorySub)
        {
<div class="row">
    <div class="col-lg-12">
        <div class="portfolio-menu pt-30 text-center">
            <ul>
                <li style="font-size:32px" data-filter="*" class="active">@productSub.Category.Name</li>
            </ul>
        </div> <!-- portfolio menu -->
    </div>
</div> <!-- row -->

                    <div class="row grid">
                        <div class="col-lg-12 col-sm-12">
                            <div class="single-portfolio mt-30 wow fadeInUp" data-wow-duration="1.5s" data-wow-delay="0.2s">

                                <table class="responstable">

                                    <tr>
                                        <th>Tên Sản Phẩm</th>
                                        <th>Đơn Giá</th>
                                        <th>Tình Trạng</th>
                                        <th>Xuất Xứ</th>
                                        <th>Ghi Chú</th>
                                    </tr>
                                    @{ foreach (ProductViewModel product in productSub.ListProduct)
                                        {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>@product.ProductStatus</td>
                        <td>@product.MadeIn</td>
                        <td>@product.Comment</td>
                    </tr>
 } }

                                </table>
                            </div> <!-- single portfolio -->
                        </div>
                    </div> <!-- row --> } }
</div> <!-- container --> } }
    </section>

    <footer id="footer" class="footer-area">
        <div class="footer-copyright">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <div class="copyright text-center mt-10">
                            <p class="text">Copyright ©2020 All rights reserved |<strong style="color:red"> 621 Shop</strong></p>
                        </div> <!--  copyright -->
                    </div>
                </div> <!-- row -->
            </div> <!-- container -->
        </div> <!-- footer copyright -->
    </footer>

    <!--====== FOOTER FOUR PART ENDS ======-->
    <!--====== BACK TOP TOP PART START ======-->

    <a href="#" class="back-to-top"><i class="lni-chevron-up"></i></a>

    <!--====== BACK TOP TOP PART ENDS ======-->
    <!--====== PART START ======-->
    <!--====== PART ENDS ======-->
    <!--====== jquery js ======-->
    <script src="assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="assets/js/vendor/jquery-1.12.4.min.js"></script>

    <!--====== Bootstrap js ======-->
    <script src="assets/js/bootstrap.min.js"></script>
    <script src="assets/js/popper.min.js"></script>

    <!--====== Slick js ======-->
    <script src="assets/js/slick.min.js"></script>

    <!--====== Isotope js ======-->
    <script src="assets/js/isotope.pkgd.min.js"></script>

    <!--====== Images Loaded js ======-->
    <script src="assets/js/imagesloaded.pkgd.min.js"></script>

    <!--====== Magnific Popup js ======-->
    <script src="assets/js/jquery.magnific-popup.min.js"></script>

    <!--====== Scrolling js ======-->
    <script src="assets/js/scrolling-nav.js"></script>
    <script src="assets/js/jquery.easing.min.js"></script>

    <!--====== wow js ======-->
    <script src="assets/js/wow.min.js"></script>

    <!--====== Main js ======-->
    <script src="assets/js/main.js"></script>

    <!--====== Clock js ======-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.0.0/moment.min.js"></script>
    <script src="~/assets/js/clock.js"></script>
